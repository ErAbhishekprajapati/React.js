
import React from 'react';
import { useState } from "react";
import './Simplef.css';
import {Form, Button, Tabs, Tab, Badge } from "react-bootstrap";

const App = () => {
  const [workExperiences, setWorkExperiences] = useState([{ id: 1, title: "", company: "", location: "", startDate: "", endDate: "" }]);
  
  const addWorkExperience = () => {
    setWorkExperiences([...workExperiences, { id: workExperiences.length + 1, title: "", company: "", location: "", startDate: "", endDate: "" }]);
  };
  return (
    <>
      <section className="hero-section text-white py-5" style={{ backgroundColor: '#7E67AC' }}>
        <div className="container">
          <div className="row align-items-center">
